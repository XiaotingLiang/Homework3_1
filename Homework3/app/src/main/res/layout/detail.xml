<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/addtofav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="Add to your favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/detail_imageView"
        android:layout_width="218dp"
        android:layout_height="142dp"

        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="326dp"
        android:layout_height="478dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/detail_name"
                android:layout_width="201dp"
                android:layout_height="31dp"
                android:text="Name"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="67dp" />

            <TextView
                android:id="@+id/detail_origin"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="Oooooooooo"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="123dp" />

            <TextView
                android:id="@+id/detail_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="499dp" />

            <TextView
                android:id="@+id/detail_lifespan"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="lllllllllllllllllllllllllllllllllllllllll"
                tools:layout_editor_absoluteX="29dp"
                tools:layout_editor_absoluteY="166dp" />

            <TextView
                android:id="@+id/detail_dogfriendless"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:text="dogggggggggggggggggg"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="499dp" />

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:text="ww"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="499dp" />

            <TextView
                android:id="@+id/detail_temperament"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="tttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="499dp" />

            <TextView
                android:id="@+id/detail_wiki"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="wikiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="272dp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>